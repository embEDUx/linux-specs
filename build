#! /bin/bash -e

#####################
# Configuration     # 							     
#####################

### Sources
KERNEL_DIR="linux"
KERNEL_FILE="linux-3.17.tar.gz"
# SRC_CONF=".config"

### Patches
GPATCH_DIR="gentoo-patches"
GPATCH_BASE_FILE="genpatches-3.17-5.base.tar.xz"
GPATCH_EXTRAS_FILE="genpatches-3.17-5.extras.tar.xz"

### Outputs
# DST_DIR="output"
# DST_IMG="zImage"
# DST_DTB="am335x-boneblack.dtb"
# DST_CONF=".config"
# DST_PRE="$(date '+%Y%m%d')_$(date '+%H-%M-%S')_3.17.2"

#####################
# Script            #
#####################

### Kernel sources and patches.
mkdir ${KERNEL_DIR}
tar -xf ${KERNEL_FILE} -C ${KERNEL_DIR} --strip 1

### Gentoo patchset
mkdir ${GPATCH_DIR}
tar -xf ${GPATCH_BASE_FILE} -C ${GPATCH_DIR}
tar -xf ${GPATCH_EXTRAS_FILE} -C ${GPATCH_DIR}

### Apply gentoo patchset
cd ${KERNEL_DIR}
for patch in $(ls ../${GPATCH_DIR}/*.patch 2>/dev/null) 
	do patch -t -p1 < $patch
done
cd ..

### Clean up gentoo patchset
rm -rf ${GPATCH_DIR}

